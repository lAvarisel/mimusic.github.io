//- Все примеси в этом файле должны начинаться c имени блока (album)

mixin album(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +album('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' album--' + modsList[i].trim();
      }
    }

  section.album(class=allMods)&attributes(attributes)
    .album__inner
      block
