block footer
  h3.page-footer__title Sign Up For Exclusives
  img.page-footer__rectangle(src="img/rectangle.jpg", alt="decorate")
  span.page-footer__subtitle Sign up for latest news, exclusive offers and ticket pre-sales.
  //- form(action="")
  +form()
    +field-text({
      attrs: {placeholder: 'NAME'}
    })
    +field-text({
      attrs: {
        placeholder: 'email',
        type: 'email',
        require: true,
        'data-check-pattern': '[a-z0-9!#$%&\'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&\'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?'}
    })
    +field-actions()
      +btn('sign up now', 'field-actions__btn')(type="submit")
  .page-footer__logo
    .page-footer__logoBack
      p.page-footer__logo.page-footer__logo--name MI
    p.page-footer__logo.page-footer__logo--subname MUSIC.
  ul.page-footer__nav
